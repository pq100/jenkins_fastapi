pipeline {
    agent any
    
    environment {
        DOCKERHUB_SECRETS=credentials('dockerhub')
        IMAGE_NAME="snicuz0588/jenkins_jodejs3"
        IMAGE_TAG="latest"
    }
    
    stages {
        stage('clone from SCM') {
            steps {
                git url: 'https://github.com/pq100/jenkins_fastapi.git', branch: 'main'
            }
        }
    }
    stages('Docker Building Node.js App') {
        steps {
            sh '''
            docker compose build
            '''
        }
    }
    stages('Logging into Docker Hub') {
        steps {
            sh '''
            echo ${DOCKERHUB_SECRETS_PSW} | docker login -u ${DOCKERHUB_SECRETS_USR} --password-stdin
            '''
        }
    }
    stages('Pushing Docker image to Docker Hub') {
        steps {
            sh '''
            docker tag snicuz0588 ${IMAGE_NAME}:${IMAGE_TAG}
            docker push ${IMAGE_NAME}:${IMAGE_TAG}
            '''
        }
    }
    stages('Docker Hub logout') {
        steps {
            sh '''
            docker logout
            '''
        }
    }
    
}
